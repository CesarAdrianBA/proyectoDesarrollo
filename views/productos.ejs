<%- include('./layout/header') %>

<div class="container-fluid">
    <div class="row">
        <div class="card-group justify-content-around">
            <% for (let i = 0; i < products.length; i++) { %>            
                <div class="col-3 mx-1">
                    <div class="card my-4">
                        <img src="<%= products[i].image_url %>" class="card-img-top" alt="<%= products[i].name %>">
                        <div class="card-body">
                            <h4 class="card-title"><%= products[i].name %></h4>
                            <h5 class="card-text text-end"><%= products[i].price %> $</h5>
                            <form action="/agregar-carrito" method="POST">
                                <input type="hidden" name="id" value="<%= products[i].id %>">
                                <input type="hidden" name="name" value="<%= products[i].name %>">
                                <input type="hidden" name="price" value="<%= products[i].price %>">
                                <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>



<%- include('./layout/footer') %>
