<%- include('./layout/header') %>

<div class="container py-5">
  <h2 class="text-center mb-4">Productos para Consentir a tu Mascota</h2>
  <div class="row g-4">
    <% for (let i = 0; i < products.length; i++) { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card product-card h-100">
          <img src="<%= products[i].image_url %>" class="card-img-top product-img" alt="<%= products[i].name %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= products[i].name %></h5>
            <p class="price-tag mb-3 text-end"><%= products[i].price %> $</p>
            <form action="/agregar-carrito" method="POST" class="mt-auto">
              <input type="hidden" name="id" value="<%= products[i].id %>">
              <input type="hidden" name="name" value="<%= products[i].name %>">
              <input type="hidden" name="price" value="<%= products[i].price %>">
              <button type="submit" class="btn btn-warning btn-add-cart">
                ðŸ›’ Agregar al Carrito
              </button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('./layout/footer') %>
